<?xml version="1.0" encoding="utf-8"?>
<!-- sourced from http://www.gadgetsaint.com/tips/rounded-corners-views-layouts-android/#.WlvdsainF9M -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <stroke
        android:width="@dimen/rounded_question_borderline_width"
        android:color="@color/dockerQuestionBorderCorrect" />
    // the inside color
    <solid android:color="@color/dockerQuestionBackgroundCorrect" />
    <corners android:radius="@dimen/rounded_questions_radius" />
    <padding
        android:bottom="@dimen/rounded_questions_padding_bottom"
        android:left="@dimen/rounded_questions_padding_left"
        android:right="@dimen/rounded_questions_padding_right"
        android:top="@dimen/rounded_questions_padding_top" >
    </padding>
</shape>